<h1><h1><%= Report.model_name.human %></h1></h1>

<table>
  <thead>
    <tr>
      <th><%= Report.human_attribute_name(:date) %></th>
      <th><%= User.model_name.human %></th>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:content) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= l report.created_at, format: :short %></td>
        <% if report.user.name == "" %>
          <td><%= report.user.email %></td>
        <% else %>  
          <td><%= report.user.name %></td>
        <% end %>  
        <td><%= report.title %></td>
        <td><%= report.content %></td>
        <td><%= link_to t('views.common.show'), report %></td>
        <% if report.user_id == current_user.id %>
          <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.common.new'), new_report_path %>
