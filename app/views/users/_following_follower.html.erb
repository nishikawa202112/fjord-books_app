<% if users.exists? %>
  <table>
    <thead>
      <tr>
        <th></th>
        <th><%= User.human_attribute_name(:name) %></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% users.each do |user| %>
        <tr>
          <td>
            <% if user.avatar.attached? %>
              <%= image_tag user.avatar.variant(resize_to_fill: [30, 30])%>
            <% end %>
          </td>
          <td><%= user.name %></td>
          <td><%= link_to t('views.common.show'), user %></td>
        </tr>
      <% end %>  
    </tbody>
  </table>
<% else %>
  <p><%= t('follow_follower.notice_nothing') %></p>
<% end %>